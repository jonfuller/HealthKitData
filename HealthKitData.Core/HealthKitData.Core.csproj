<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>HealthKitData.Core</AssemblyName>
    <RootNamespace>HealthKitData.Core</RootNamespace>

    <PackageId>HealthKitData.Core</PackageId>
    <Version>0.3.0</Version>
    <Description>Library for handling HealthKit data and exporting it to Excel/CSV. Also facilitates loading a HealthKit "data export" file.</Description>
    <Authors>Jon Fuller</Authors>
    <PackageTags>HealthKit Fitness iOS Xamarin Excel CSV</PackageTags>
    <PackageProjectUrl>https://github.com/jonfuller/HealthKitData</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="EPPlus" Version="5.8.6" />
    <PackageReference Include="NodaTime" Version="3.0.9" />
    <PackageReference Include="UnitsNet" Version="4.116.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="6.0.0" />
  </ItemGroup>

</Project>
